@model InventoryManagementSystem.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<form asp-action="Edit">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="ProductId" />

    <div class="form-group mb-3">
        <label asp-for="ProductName" style="font-weight: bold;"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" style="font-weight: bold;"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Supplier" style="font-weight: bold;"></label>
        <input asp-for="Supplier" class="form-control" />
        <span asp-validation-for="Supplier" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Quantity" style="font-weight: bold;"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="UnitPrice" style="font-weight: bold;"></label>
        <input asp-for="UnitPrice" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ExpiryDate" style="font-weight: bold;"></label>
        <input asp-for="ExpiryDate" class="form-control" type="date" />
        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
    </div>

    
    <div class="form-group mb-3">
        <label asp-for="RestockDate" style="font-weight: bold;"></label>
        <input asp-for="RestockDate" class="form-control" type="date" />
        <span asp-validation-for="RestockDate" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

</form>
























