@{
    ViewData["Title"] = "Inventory Dashboard";
}

<h1>Inventory Dashboard</h1>

<div class="row">
    <div class="col-md-6">
        <h3>Total Inventory Value: R @ViewBag.TotalInventoryValue</h3>
    </div>
    <div class="col-md-6">
        <h3>Low Stock Alerts: @ViewBag.LowStockProducts</h3>
    </div>
    <div id="expiryAlerts" class="alert alert-danger" style="display: none;">
        <strong>Expiry Alert:</strong>
        <ul id="expiryList"></ul>
    </div>
</div>

<!-- Chart Container -->
<canvas id="stockChart" width="400" height="200"></canvas>

@section Scripts {
    <script>
        var ctx = document.getElementById('stockChart').getContext('2d');
        var stockChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.ProductNames)), // Product names
                datasets: [{
                    label: 'Stock Levels',
                    data: @Html.Raw(Json.Serialize(ViewBag.ProductQuantities)), // Product quantities
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>

    <script>
        // Function to check for expiring products
        function checkExpiry() {
            $.ajax({
                url: '@Url.Action("GetExpiringSoonItems")',
                type: 'GET',
                success: function (data) {
                    var expiryList = $("#expiryList");
                    expiryList.empty(); // Clear existing alerts

                    if (data.length > 0) {
                        // Show the alert box
                        $("#expiryAlerts").show();

                        // List expiring items
                        data.forEach(function (item) {
                            expiryList.append("<li>" + item.productName + " (Expiry: " + new Date(item.expiryDate).toLocaleDateString() + ")</li>");
                        });
                    } else {
                        // Hide the alert box if no expiring items
                        $("#expiryAlerts").hide();
                    }
                }
            });
        }

        // Check for expiring products every 30 seconds
        setInterval(checkExpiry, 30000);

        // Call the function initially
        checkExpiry();
    </script>
}
