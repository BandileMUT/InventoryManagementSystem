@model IEnumerable<InventoryManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h1>Product List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Product</a>
</p>

<input type="text" id="searchString" placeholder="Search by name" />
<button id="searchButton" class="btn btn-secondary">Search</button>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Supplier</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Description</td>
                <td>@item.Supplier</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice</td>
                <td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info">Details</a>
                    <a asp-controller="StockHistory" asp-action="Index" asp-route-id="@item.ProductId" class="btn btn-secondary">View Stock History</a> <!-- Link to stock history -->
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.getElementById("searchButton").addEventListener("click", function () {
            var searchValue = document.getElementById("searchString").value;
            window.location.href = '@Url.Action("Index")' + '?searchString=' + searchValue;
        });
    </script>
}
